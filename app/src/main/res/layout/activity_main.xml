                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/margin_4dp"
                                android:layout_marginBottom="@dimen/margin_4dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="6dp"
                                android:background="#635A5A"/>
                            <View
